;; language setting

;; Added by Package.el.  This must come before configurations of
;; installed packages.  Don't delete this line.  If you don't want it,
;; just comment it out by adding a semicolon to the start of the line.
;; You may delete these explanatory comments.
(package-initialize)

(set-language-environment "Japanese")
(set-terminal-coding-system 'utf-8)
(set-default-coding-systems 'utf-8)
(set-buffer-file-coding-system 'utf-8)
(set-keyboard-coding-system 'utf-8)
(setq default-buffer-file-coding-system 'utf-8)

;; emacs dir
(defconst emacs-dir "~/.emacs.d/")
;(defconst emacs-dir "~/Dropbox/home/.emacs.d/")

;; 解像度別 画面設定
(when window-system
  (let ((resolution (list (x-display-pixel-width) (x-display-pixel-height))))
	(cond
	 ((equal resolution '(1440 900))
	  (defconst my-screen-width 118)
	  (defconst my-screen-height 50)
	  (defconst my-screen-top 120)
	  (defconst my-screen-left 594)
	  ;;(defconst my-font "Ricty Diminished-14")
	  (defconst my-font "ＭＳ 明朝-14")
	  (message "解像度: 1440x900"))

	 ((or			;; デュアルディスプレイ(DELL 4Kモニタ)
	   (equal resolution '(4608 1549))
	   (equal resolution '(4608 1440)))
	  (defconst my-screen-width 118)
	  (defconst my-screen-height 50)
	  (defconst my-screen-top 740)
	  (defconst my-screen-left 3644)
	  ;;(defconst my-font "Ricty Diminished-16")
	  (defconst my-font "ＭＳ 明朝-16")
	  (message "解像度: 4608x1568 or 4608x1440"))

	 ;; デュアルディスプレイ(DELL 4Kモニタ2)
	 ((equal resolution '(5408 1890))
	  (defconst my-screen-width 118)
	  (defconst my-screen-height 50)
	  (defconst my-screen-top 1060)
	  (defconst my-screen-left 4440)
	  ;;(defconst my-font "Ricty Diminished-16")
	  (defconst my-font "ＭＳ 明朝-16")
	  (message "解像度: 5408x1890"))

	 ;; デュアルディスプレイ(DELL 4Kモニタ3)
	 ((equal resolution '(5056 1692))
	  (defconst my-screen-width 118)
	  (defconst my-screen-height 50)
	  (defconst my-screen-top 864)
	  (defconst my-screen-left 4090)
	  ;;(defconst my-font "Ricty Diminished-16")
	  (defconst my-font "ＭＳ 明朝-16")
	  (message "解像度: 5408x1890"))

	 ;; その他はノートPCに表示
	 (t
	  (defconst my-screen-width 118)
	  (defconst my-screen-height 50)
	  (defconst my-screen-top 445)
	  (defconst my-screen-left 1080)
	  ;;(defconst my-font "Ricty Diminished-16")
	  (defconst my-font "ＭＳ 明朝-16")
	  (message "解像度: 2048x1280"))
	 )))

;; Program setting
